# EditorConfig configuration for Nix files
# https://editorconfig.org/

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Nix files specific settings
[*.nix]
indent_style = space
indent_size = 2
